{{#each products}}
    <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
            <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="{{thumbnail.url}}" alt="商品描述">
            <div class="card-body">
                <p class="card-text">{{name}}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        {{#if quickBuy}}
                            <button class="btn btn-sm btn-outline-danger not-yet-sale">{{buyTips}}</button>
                        {{else}}
                            <a href="./order/confirm.html?id={{id}}" class="btn btn-sm btn-outline-danger">{{buyTips}}</a>
                        {{/if}}
                        <a href="./item.html?id={{id}}" class="btn btn-sm btn-outline-primary">查看</a>
                    </div>
                    <small class="text-muted">月销 {{extra.monthPurchase}}</small>
                </div>
            </div>
        </div>
    </div>
{{/each}}